<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E3239"
    android:orientation="vertical"
    tools:context=".mainmenu">

    <LinearLayout
        android:orientation ="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/profil"
        android:layout_width="70dp"
        android:layout_height="74dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/background_menu"
        android:scaleType="fitCenter"
        android:src="@drawable/profil"
        android:contentDescription="foto_profil" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Hi, Admin"
            android:textColor="#fff"
            android:layout_marginTop="60dp"
            android:layout_marginStart="10dp"
            android:id="@+id/admin"
    />

    </LinearLayout>

    <LinearLayout
        android:orientation ="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtwelcome"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_welcome"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp"
            android:textColor="#26292B"
            android:text="WELCOME, HAVE A NICE DAY!\n\nSilahkan memilih salah satu menu dibawah ini"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation ="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/kalkulator"
            android:layout_width="70dp"
            android:layout_height="74dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/bg_menu"
            android:scaleType="center"
            android:src="@drawable/kalkulator"
            android:contentDescription="ikon_kalkulator" />

        <LinearLayout
            android:orientation ="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtkalkulator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="kalkulator"
            android:textColor="#fff"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            />

            <TextView
                android:id="@+id/deskripsikalkulator"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Aplikasi ini dapat digunakan saat membantu perhitungan\nsecara berkala"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation ="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ganjilgenap"
            android:layout_width="70dp"
            android:layout_height="74dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/bg_gg"
            android:scaleType="fitCenter"
            android:src="@drawable/gg"
            android:contentDescription="icon ganjil genap" />

        <LinearLayout
            android:orientation ="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtganjilgenap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Ganjil Genap"
                android:textColor="#fff"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/deskripsiganjilgenap"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Aplikasi ini dapat digunakan saat membantu mencari bilangan\nganjil atau genap"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation ="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/list"
            android:layout_width="70dp"
            android:layout_height="74dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/bg_list"
            android:scaleType="center"
            android:src="@drawable/list"
            android:contentDescription="icon list" />
        <LinearLayout
            android:orientation ="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="List"
                android:textColor="#fff"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/deskripsilist"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Aplikasi ini dapat membantu\nmembuat daftar keseharian\nmaupun lainnya"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
